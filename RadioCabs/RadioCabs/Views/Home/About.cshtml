@model IEnumerable<RadioCabs.Models.FeedBack>
@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- start banner Area -->
<section class="banner-area relative about-banner" id="home">
	<div class="overlay overlay-bg"></div>
	<div class="container">
		<div class="row d-flex align-items-center justify-content-center">
			<div class="about-content col-lg-12">
				<h1 class="text-white">
					About Us
				</h1>
				<p class="text-white link-nav"><a href="index.html">Home </a>  <span class="lnr lnr-arrow-right"></span>  <a href="about.html"> About Us</a></p>
			</div>
		</div>
	</div>
</section>
<!-- End banner Area -->
<!-- Start home-about Area -->
<section class="home-about-area section-gap">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-lg-6 about-left">
				<img class="img-fluid" src="~/web/img/about-img.jpg" style="height:auto;" alt="">
			</div>
			<div class="col-lg-6 about-right">
				<h1>
					Globally Connected
					by Large Network
				</h1>
				<h4>We are here to listen from you deliver exellence</h4>
				<p>
					We Radio Cabs is a complete directory which provides information about Radio Taxi companies and their services in Pakistan and all major cities of the country. With the assistance of this online Radio Taxi, you can effortlessly find all information you need about Radio Taxi Rental Services with their respective companies who serve you in your City. RadioCabs.in with its city wise listing of best Radio Taxi operators helps you to indulge with best cab experience providing safe, cost effective and highly personalized world class transport, round-the-clock. It provides listing of Radio Cabs Company from all over Pakistan.
				</p>
				<a class="text-uppercase primary-btn" asp-area="" asp-controller="Home" asp-action="Company">Book a Cab</a>
			</div>
		</div>
	</div>
</section>
<!-- End home-about Area -->
<!-- Start reviews Area -->
<section class="reviews-area section-gap">
	<div class="container">
		<div class="row section-title">
			<h1>Client’s Feedbacks</h1>
			<p>Who are in extremely love with eco friendly system.</p>
		</div>
		<div class="row">
			@if(Model!=null){
				@foreach(var item in Model){
					<div class="col-lg-4 col-md-6">
						<div class="single-review">
							<h4>@item.Name</h4>
							<p>
								@item.Description
							</p>
							<div class="star">
								<span class="fa fa-star checked"></span>
								<span class="fa fa-star checked"></span>
								<span class="fa fa-star checked"></span>
								<span class="fa fa-star checked"></span>
								<span class="fa fa-star"></span>
							</div>
						</div>
					</div>
				}
			}
		</div>
	</div>
</section>
