@model RadioCabs.Models.Registration

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- start banner Area -->
<section class="banner-area relative about-banner" id="home">
	<div class="overlay overlay-bg"></div>
	<div class="container">
		<div class="row d-flex align-items-center justify-content-center">
			<div class="about-content col-lg-12">
				<h1 class="text-white">
					Register Your Self
				</h1>
				<p class="text-white link-nav"><a asp-area="" asp-controller="Home" asp-action="Index">Home </a>  <span class="lnr lnr-arrow-right"></span>  <a href="elements.html"> Elements</a></p>
			</div>
		</div>
	</div>
</section>
<!-- End banner Area -->
<!-- Start Align Area -->
<div class="whole-wrap mt-5 mb-5" >
	<div class="container">
			<div class="row">
				<div class="col-lg-8 col-md-8">
					<h3 class="mb-30">Registeration Farm</h3>
					<form asp-action="Create" method="post" enctype="multipart/form-data">
					<div class="text-danger"></div>
						<div class="mt-10">
							<input type="text" asp-for="Name" placeholder="Your Full Name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Your Full Name'" required class="single-input">
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
						<div class="mt-10">
						<input type="email" asp-for="Email" placeholder="Your Email Address" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email Address'" required class="single-input">
						<span asp-validation-for="Email" class="text-danger"></span>
						</div>
						<div class="mt-10">
						<input type="file" name="image" required class="single-input">
						<span asp-validation-for="Profile" class="text-danger"></span>
						</div>
						<div class="input-group-icon mt-10">
							<div class="icon"><i class="fa fa-thumb-tack" aria-hidden="true"></i></div>
						<input type="text" asp-for="Address" placeholder="Address" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Address'" required class="single-input">
						<span asp-validation-for="Address" class="text-danger"></span>
						</div>
						<div class="mt-10">
						<input type="text" asp-for="Mobile" placeholder="Mobile Number" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Mobile'" required class="single-input">
						<span asp-validation-for="Mobile" class="text-danger"></span>
						</div>
						<div class="mt-10">
						<input type="text" asp-for="TelePhone" placeholder="TelePhone Number" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Telephone'" required class="single-input">
						<span asp-validation-for="TelePhone" class="text-danger"></span>
						</div>
						<div class="input-group-icon mt-10">
							<div class="icon">City</div>
						<div class="form-select" asp-for="City" >
							<select asp-for="City">
									<option value="Karachi">Karachi</option>
								<option value="Islamabad">Islamabad</option>
								<option value="Rawalpindi">Rawalpindi</option>
								<option value="Hyderabad">Hyderabad</option>
								<option value="Multan">Multan</option>
								<option value="Lahore">Lahore</option>
								<option value="Quetta">Quetta</option>
								</select>
							</div>
						<span asp-validation-for="City" class="text-danger"></span>
						</div>

					<div class="mt-10">
						<input type="password" asp-for="Password" placeholder="Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password'" required class="single-input">
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>
					<div class="mt-10">
						<input type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Confirm Password'" required class="single-input">
						<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
					</div>
					
					<div class="button-group-area mt-40">
						<input type="submit" class="btn btn-warning genric-btn link circle" value="Submit">
						<input type="reset" class="genric-btn link circle" value="Reset">
					</div>
					</form>
				</div>
		</div>
	</div>
</div>
<!-- End Align Area -->