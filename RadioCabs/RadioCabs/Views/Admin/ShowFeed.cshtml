@model IEnumerable<RadioCabs.Models.FeedBack>

@{
    ViewData["Title"] = "ShowFeed";
    Layout = "~/Views/Shared/admin_Layout.cshtml";
}

<div class="am-pagetitle">
    <h5 class="am-title">FeedBacks</h5>
    <form id="searchBar" class="search-bar" action="index.html">
        <div class="form-control-wrapper">
            <input type="search" class="form-control bd-0" placeholder="Search...">
        </div><!-- form-control-wrapper -->
        <button id="searchBtn" class="btn btn-orange"><i class="fa fa-search"></i></button>
    </form><!-- search-bar -->
</div><!-- am-pagetitle -->

<div class="am-mainpanel">
    <div class="am-pagebody">

        <div class="card pd-20 pd-sm-40">
            <h6 class="card-body-title">Feedbacks List</h6>

            <div class="table-wrapper">
                <table id="datatable1" class="table display responsive nowrap">
                    <thead>
                        <tr>
                            <th class="wd-15p">@Html.DisplayNameFor(model => model.Name)</th>
                            <th class="wd-15p"> @Html.DisplayNameFor(model => model.MobileNo)</th>
                            <th class="wd-15p">@Html.DisplayNameFor(model => model.Email)</th>
                            <th class="wd-20p">@Html.DisplayNameFor(model => model.City)</th>
                            <th class="wd-20p">@Html.DisplayNameFor(model => model.Type)</th>
                            <th class="wd-20p">@Html.DisplayNameFor(model => model.Description)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.MobileNo</td>
                                <td>@item.Email</td>
                                <td>@item.City</td>
                                <td>@item.Type</td>
                                <td>@item.Description</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div><!-- table-wrapper -->
        </div><!-- card -->

    </div><!-- am-pagebody -->
